<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>MFilter</filter-name>
        <filter-class>com.mycompany.linkcutter.MFilter</filter-class>
        <init-param>
            <param-name>login</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>passwd</param-name>
            <param-value>admin1</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>MFilter</filter-name>
        <url-pattern>/MFilter</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Simple</servlet-name>
        <servlet-class>com.mycompany.linkcutter.Simple</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Redirect</servlet-name>
        <servlet-class>com.mycompany.linkcutter.Redirect</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Simple</servlet-name>
        <url-pattern>/Simple/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Redirect</servlet-name>
        <url-pattern>/Redirect/*</url-pattern>
    </servlet-mapping>

</web-app>
